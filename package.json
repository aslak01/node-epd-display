{
  "name": "epd-display",
  "main": "index.ts",
  "type": "module",
  "scripts": {
    "preview": "node --env-file=.env index.ts preview",
    "preview:rotate": "node --env-file=.env index.ts preview --rotate",
    "dev": "node --env-file=.env --watch index.ts preview",
    "dev:rotate": "node --env-file=.env --watch index.ts preview --rotate",
    "display": "node --env-file=.env index.ts display",
    "display:rotate": "node --env-file=.env index.ts display --rotate",
    "display_test:rotate": "node --env-file=.env index.ts display_test --rotate",
    "clear": "node index.ts clear",
    "test": "node --test tests/**/*.test.ts",
    "test:watch": "node --test --watch tests/**/*.test.ts",
    "lint": "pnpm oxlint",
    "lint:type-aware": "pnpm oxlint --type-aware",
    "typecheck": "pnpm tsc --noEmit"
  },
  "devDependencies": {
    "@hono/node-server": "^1",
    "@napi-rs/canvas": "^0.1",
    "@types/d3": "^7.4",
    "@types/node": "^24",
    "@types/yargs": "^17",
    "d3": "^7",
    "hono": "^4",
    "is-online": "^12",
    "node-addon-api": "^8",
    "node-gyp": "^11",
    "node-gyp-build": "^4",
    "oxlint": "^1.15.0",
    "oxlint-tsgolint": "^0.2.0",
    "prettier": "^3",
    "skia-canvas": "^3",
    "typescript": "^5",
    "yargs": "^18"
  }
}
